---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
import { Card } from 'accessible-astro-components'
---

<DefaultLayout
  title="香港银行卡办理指南"
  description="港卡办理、避坑指南"
  page_url="hongkong"
>
  <section class="my-5">
    <div class="space-content container">
      <h1>香港银行卡办理指南</h1>
      <p class="text-2xl">
        港卡办理、避坑指南
      </p>
    </div>
  </section>
  <section class="my-12">
    <div class="container">
      <ul class="my-3">
        <li>
            <Card
            url='/hongkong/boc'
            title='中银香港'
            footer=''
            >
            中银香港卡办理指南
            </Card>
        </li>
        <li>
            <Card
            url='/hongkong/hsbc'
            title='汇丰One'
            footer=''
            >
            汇丰卡办理指南
            </Card>
        </li>
        <li>
            <Card
            url='/hongkong/cmbwinglung'
            title='招商永隆'
            footer=''
            >
            招商永隆卡办理指南
            </Card>
        </li>
      </ul>
      <ul class="my-3">
        <li>
            <Card
            url='/hongkong/zhongan'
            title='众安银行'
            footer=''
            >
            众安银行卡办理指南
            </Card>
        </li>
      </ul>
    </div>
  </section>
</DefaultLayout>

<style lang="scss">
  ul {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 4rem;

    @media (min-width: 550px) {
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 2rem;
    }

    @media (min-width: 950px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>