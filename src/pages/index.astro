---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import Feature from '../components/Feature.astro'
---

<DefaultLayout title="Home">
  <section class="my-5">
    <div class="container">
      <h2 class="mb-10 text-6xl">香港银行卡</h2>
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
        <Feature icon="mdi:tailwind" title="中银香港开户指南" link="/hongkong/boc">
          中银香港开户指南
        </Feature>
        <Feature icon="mdi:wheelchair-accessibility" title="汇丰one开户指南" link="/hongkong/hsbc">
          汇丰one开户指南
        </Feature>
        <Feature icon="mdi:looks" title="招商永隆开户指南" link="/hongkong/cmbwinglung">
          招商永隆开户指南
        </Feature>
        <Feature icon="mdi:eslint" title="众安银行开户指南" link="/hongkong/zhongan">
          众安(ZA Bank)开户指南
        </Feature>
      </div>
    </div>
    </section>
    <section class="my-5 mt-11">
    <div class="container">
      <h2 class="mb-10 text-6xl">新加坡银行卡</h2>
      <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3">
        <Feature icon="mdi:tailwind" title="华侨银行(OCBC)开户指南" link="/singapore/ocbc">
          华侨银行(OCBC)开户指南
        </Feature>
      </div>
    </div>
  </section>
</DefaultLayout>
